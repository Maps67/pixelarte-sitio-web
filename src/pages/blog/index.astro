---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true; 
}).then(posts => posts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()));
---
<Layout 
  title="Blog | Pixelarte Studio"
  description="Artículos y perspectivas 'insider' sobre marketing digital para el sector médico."
>
  <section class="bg-claro py-16 md:py-24">
    <div class="container max-w-3xl mx-auto px-4">
      
      <header class="text-center mb-10">
        {/* Este H1 usará los estilos 'h1' de global.css */}
        <h1 class="font-playfair font-bold text-oscuro mb-4">
          Blog del Insider
        </h1>
        <p class="text-lg text-secundario">
          Perspectivas y estrategias probadas del sector médico.
        </p>
      </header>

      <div class="blog-list-container">
        {allPosts.map((post) => (
          <a 
            href={`/blog/${post.slug}/`} 
            class="blog-card group"
          >
            {post.data.image && post.data.image.url && (
              <div class="card-image-wrapper">
                <img 
                  src={post.data.image.url} 
                  alt={post.data.image.alt || ''} 
                  class="card-image"
                  width="800"
                  height="450"
                  loading="lazy"
                />
              </div>
            )}
            <div class="card-content">
              {/* Este H2 usará los estilos 'h2' de global.css */}
              <h2 class="font-playfair font-bold text-claro group-hover:text-acento mb-2 transition-colors duration-200">
                {post.data.title}
              </h2>
              <p class="text-secundario-claro mb-3">
                {post.data.description}
              </p>
              <span class="text-acento font-semibold group-hover:underline">Leer artículo &rarr;</span>
              <p class="text-sm text-secundario-claro mt-4">
                Publicado el: {new Date(post.data.pubDate).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
              </p>
            </div>
          </a>
        ))}
      </div>

    </div>
  </section>
</Layout>

{/* Estilos locales para las tarjetas (sin tamaños de fuente) */}
<style>
  .blog-list-container {
    display: grid;
    gap: 2rem;
  }
  .blog-card {
    display: block;
    background-color: var(--color-oscuro-contraste);
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: all 0.3s ease-in-out;
    text-decoration: none;
  }
  .blog-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
    transform: translateY(-4px);
  }
  .card-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* 16:9 */
    overflow: hidden;
    background-color: #334155;
  }
  .card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; 
    transition: transform 0.3s ease-in-out;
  }
  .blog-card:hover .card-image {
    transform: scale(1.05);
  }
  .card-content {
    padding: 1.5rem;
  }
  /* Ajuste para que los h2 de las tarjetas usen el color claro */
  .card-content h2 {
    color: var(--color-texto-claro);
  }
  .group:hover .group-hover\:text-acento {
    color: var(--color-acento);
  }
  .group:hover .group-hover\:underline {
    text-decoration: underline;
  }
</style>