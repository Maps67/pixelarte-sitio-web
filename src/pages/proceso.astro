---
import Layout from '../layouts/Layout.astro';

const processSteps = [
  {
    step: '01',
    title: 'Descubrimiento y Estrategia',
    description: 'Comenzamos con una reunión para entender a fondo tus objetivos, tu audiencia y tus necesidades. Definimos juntos el alcance del proyecto y creamos un plan de acción estratégico para asegurar el éxito.',
    icon: 'compass'
  },
  {
    step: '02',
    title: 'Diseño UI/UX',
    description: 'Creamos prototipos visuales y wireframes de tu sitio web. Nos enfocamos en una experiencia de usuario intuitiva y un diseño de interfaz atractivo que refleje la identidad de tu marca y conecte con tus clientes.',
    icon: 'draft'
  },
  {
    step: '03',
    title: 'Desarrollo y Programación',
    description: 'Es hora de escribir el código. Utilizamos tecnologías modernas y las mejores prácticas para construir un sitio web rápido, seguro y perfectamente funcional en todos los dispositivos.',
    icon: 'code'
  },
  {
    step: '04',
    title: 'Lanzamiento y Soporte',
    description: 'Una vez aprobado, desplegamos tu sitio web en el servidor y lo hacemos público. Ofrecemos soporte continuo y planes de mantenimiento para garantizar que tu sitio web siga funcionando a la perfección.',
    icon: 'rocket'
  }
];

const icons = {
  compass: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon></svg>`,
  draft: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>`,
  code: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>`,
  rocket: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.3.05-3.05-.64-.75-2.17-.8-3.05-.05zm9-9c1.5-1.26 2-5 2-5s-3.74.5-5 2c-.71.84-.7 2.3-.05 3.05.64.75 2.17.8 3.05.05z"></path><line x1="22" y1="2" x2="11" y2="13"></line><line x1="2" y1="22" x2="13" y2="11"></line></svg>`
};
---

<Layout title="Nuestro Proceso - Pixelarte Studio">
    <div class="container">
        <section class="page-header">
            <h1>Nuestro Proceso</h1>
            <p>Un enfoque estructurado para garantizar resultados de alta calidad en cada proyecto.</p>
        </section>

        <section class="process-timeline">
            {processSteps.map((item) => (
                <div class="timeline-item">
                    <div class="timeline-icon" set:html={icons[item.icon]} />
                    <div class="timeline-content">
                        <span class="timeline-step">{item.step}</span>
                        <h3 class="timeline-title">{item.title}</h3>
                        <p class="timeline-description">{item.description}</p>
                    </div>
                </div>
            ))}
        </section>
    </div>
</Layout>

<style>
    .container {
        padding: 0 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    .page-header {
        text-align: center;
        padding: 4rem 0;
        max-width: 800px;
        margin: 0 auto;
    }
    .page-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }
    .page-header p {
        font-size: 1.25rem;
        color: #94a3b8;
    }
    .process-timeline {
        max-width: 800px;
        margin: 0 auto 4rem;
        position: relative;
    }
    .timeline-item {
        display: flex;
        align-items: flex-start;
        position: relative;
        padding-bottom: 3rem;
    }
    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: 24px;
        top: 48px;
        width: 2px;
        height: calc(100% - 24px);
        background-color: var(--color-borde); /* ✅ Actualizado */
        transform: translateX(-50%);
    }
    .timeline-icon {
        background-color: var(--color-acento); /* ✅ Actualizado */
        color: white;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        z-index: 10;
        border: 4px solid var(--color-fondo); /* ✅ Actualizado */
    }
    .timeline-content {
        margin-left: 1.5rem;
    }
    .timeline-step {
        background-color: var(--color-superficie); /* ✅ Actualizado */
        color: var(--color-acento); /* ✅ Actualizado */
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
    }
    .timeline-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-texto); /* ✅ Actualizado */
        margin: 0.75rem 0;
    }
    .timeline-description {
        color: #94a3b8; /* Usamos un color secundario para legibilidad */
        line-height: 1.6;
    }
</style>

