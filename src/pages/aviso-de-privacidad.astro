---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Aviso de Privacidad - Pixelarte Studio">
    <div class="container">
        <section class="page-header">
            <h1>Aviso de Privacidad</h1>
            <p>Tu confianza es importante para nosotros.</p>
        </section>

        <div class="privacy-content">
            <iframe 
                src="https://www.privacypolicies.com/live/ae1c2157-26d7-4816-bf06-9abb30c0dae1"
                frameborder="0"
                width="100%"
                height="800px"
            >
            </iframe>
        </div>
    </div>
</Layout>

<style>
    .container {
        padding-bottom: 4rem;
    }
    .page-header {
        text-align: center;
        padding: 4rem 0;
        max-width: 800px;
        margin: 0 auto;
    }
    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    .page-header p {
        font-size: 1.25rem;
        color: var(--color-texto-secundario);
    }
    .privacy-content {
        background-color: #ffffff;
        border: 1px solid var(--color-borde-claro);
        border-radius: 0.75rem;
        padding: 1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
    iframe {
        display: block;
    }
</style>