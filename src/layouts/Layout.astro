---
// src/layouts/Layout.astro (CORREGIDO)
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// ===== ¡ESTA LÍNEA ES LA QUE REPARA TU SITIO! =====
import '../styles/global.css';

interface Props {
    title: string;
    description: string;
    canonicalUrl?: string;
    ogImage?: string; // <-- AÑADIDO: Para la imagen de portada del post
    ogImageAlt?: string; // <-- AÑADIDO: Para el alt de la imagen del post
}

const { 
  title, 
  description,
  canonicalUrl,
  ogImage, // <-- AÑADIDO
  ogImageAlt // <-- AÑADIDO
} = Astro.props;

// Asumimos que 'site' está en astro.config.mjs
const siteUrl = Astro.site; 

const pageTitle = `${title} | Pixelarte Studio`;
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;

// --- Lógica de Imagen Social (Corregida) ---
// 1. Empezamos con el fallback por defecto
const fallbackImageUrl = new URL('/images/social-cover-default.png', siteUrl).href;
const fallbackImageAlt = 'Pixelarte Studio - Estrategia Digital Insider';

// 2. Si la página (ej. un post del blog) pasa una imagen específica, la usamos
const finalSocialImageUrl = ogImage ? new URL(ogImage, siteUrl).href : fallbackImageUrl;

// 3. Si la página pasa un texto 'alt' específico, lo usamos
const finalSocialImageAlt = ogImageAlt || fallbackImageAlt;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    
    {/* --- Etiquetas SEO (Versión Estable Corregida) --- */}
    <link rel="canonical" href={currentUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Pixelarte Studio" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={finalSocialImageUrl} /> {/* <-- CORREGIDO */}
    <meta property="og:image:alt" content={finalSocialImageAlt} /> {/* <-- CORREGIDO */}
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_MX" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={finalSocialImageUrl} /> {/* <-- CORREGIDO */}
    <meta name="twitter:image:alt" content={finalSocialImageAlt} /> {/* <-- CORREGIDO */}
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>