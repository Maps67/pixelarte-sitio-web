---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css'; // <-- LA LÍNEA MÁS IMPORTANTE

interface Props {
	title: string;
	description: string;
  ogImage?: string; // <-- Acepta la imagen del post
  ogImageAlt?: string;
  canonicalUrl?: string;
}

const { 
  title, 
  description, 
  ogImage,
  ogImageAlt,
  canonicalUrl
} = Astro.props;

const siteUrl = Astro.site; 

// Lógica de OG Image Estática
const socialImageUrl = ogImage 
  ? new URL(ogImage, siteUrl).href // Usa la imagen del post si existe
  : new URL('/images/social-cover-default.png', siteUrl).href; // Si no, usa la de fallback

const socialImageAlt = ogImageAlt || 'Pixelarte Studio - Blog del Insider';
const pageTitle = `${title} | Pixelarte Studio`;
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    {/* Etiquetas SEO y Open Graph */}
    <link rel="canonical" href={currentUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Pixelarte Studio" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:alt" content={socialImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_MX" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageUrl} />
    <meta name="twitter:image:alt" content={socialImageAlt} />
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>