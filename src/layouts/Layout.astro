---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Definimos las props que CUALQUIER página puede pasar
interface Props {
	title: string;
	description: string;
  // Props opcionales para SEO y Tarjetas Sociales
  ogImage?: string; // URL de la imagen de vista previa
  ogImageAlt?: string; // Texto alternativo
  canonicalUrl?: string; // URL canónica
}

const { 
  title, 
  description, 
  ogImage,
  ogImageAlt,
  canonicalUrl
} = Astro.props;

// Construir la URL completa de la imagen (necesaria para og:image)
const siteUrl = Astro.site; // (Asegúrate que 'site' esté en astro.config.mjs)

// Usamos la imagen dinámica O la imagen estática de fallback
const socialImageUrl = ogImage 
  ? new URL(ogImage, siteUrl).href 
  : new URL('/images/social-cover-default.png', siteUrl).href;

const socialImageAlt = ogImageAlt || 'Logo de Pixelarte Studio';
const pageTitle = `${title} | Pixelarte Studio`;
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="stylesheet" href="/styles/global.css" />

    <link rel="canonical" href={currentUrl} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Pixelarte Studio" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:alt" content={socialImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_MX" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageUrl} />
    <meta name="twitter:image:alt" content={socialImageAlt} />
    </head>
<body>
    <Header />
    <main>
        <slot /> </main>
    <Footer />
</body>
</html>



