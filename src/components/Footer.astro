<style>
    :root {
        --color-fondo-oscuro: #111827;
        --color-texto-claro: #F9FAFB;
        --color-borde: #374151;
    }

    .footer {
        background-color: var(--color-fondo-oscuro);
        color: #a0aec0; /* Un gris claro para el texto secundario */
        padding: 4rem 0;
        font-size: 0.875rem;
    }
    .footer-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        text-align: center;
        align-items: center;
    }
    @media (min-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr 2fr;
            text-align: left;
            gap: 4rem;
        }
    }
    .qr-section h4 {
        color: var(--color-texto-claro);
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        margin: 0 0 0.5rem;
    }
    .qr-section p {
        margin: 0 0 1.5rem;
    }
    .qr-code {
        background-color: white;
        border-radius: 0.5rem;
        padding: 1rem;
        max-width: 150px;
        margin: 0 auto;
    }
    @media (min-width: 768px) {
        .qr-code {
            margin: 0;
        }
    }
    .qr-code img {
        display: block;
        width: 100%;
        height: auto;
    }
    .links-section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    @media (min-width: 768px) {
        .links-section {
            align-items: flex-end;
        }
    }
    .social-icons {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    .social-icons a {
        color: #a0aec0;
        transition: color 0.2s ease;
    }
    .social-icons a:hover {
        color: var(--color-texto-claro);
    }
    .legal-links {
        text-align: center;
    }
    @media (min-width: 768px) {
        .legal-links {
            text-align: right;
        }
    }
    .legal-links a {
        display: block;
        margin-top: 0.5rem;
        text-decoration: none;
        color: #a0aec0;
    }
    .legal-links a:hover {
        color: var(--color-texto-claro);
        text-decoration: underline;
    }
    .copyright {
        margin-bottom: 1rem;
    }
    .divider {
        display: none;
    }
    @media (min-width: 768px) {
        .legal-links {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }
        .copyright {
            margin-bottom: 0.5rem;
        }
        .divider {
            display: block;
            width: 100%;
            height: 1px;
            background-color: var(--color-borde);
            margin: 1rem 0;
        }
    }
</style>

